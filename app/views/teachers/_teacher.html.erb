             <select id="gender" name="teacher_gender">
                <option value="Male" selected>Male</option>
                <option value="Female">Female</option>
             </select>
          </div>
          </div>

           <div class="form-group">
            <div class="col-sm-4">
              <label>Phone No :</label>
