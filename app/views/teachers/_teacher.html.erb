<div id="createTeacherContainer" class="hidden" align="center">
  <form action=""  id="createTeacherForm" method="" class="form-horizontal">
  
    <div class="container">
      <div class="row" >
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
          <div ><h3>Create Teacher</h3></div>

          <div class="form-group">
          <div class="col-sm-4">
            <label>School Name :</label>
          </div>
          <div class="col-sm-4">
            <input type="text" id="schoolName" disabled>
          </div>
          </div>

          <div class="form-group">
          <div class="col-sm-4">
            <label>Classroom Name :</label>
          </div>
