              <input type="text" id="phoneNo" name="teacher_phone">
            </div>
          </div>

          <div class="form-group"> 
            <div class="col-sm-4">
              <label>Subject :</label>
            </div>
            <div class="col-sm-4">
               <select id="ddSubject" multiple="true" size="3" width="10px" name="teacher_subject">
              </select>
              <input type="hidden" id="schoolHidden">
              <input type="hidden" id="schoolIdHidden">
