<h3>Listing Teachers</h1>
<%= link_to 'Add New Teacher', new_teacher_path %></h3></br></br>
<table border="1">
	<tr>
		<th>
			Teacher Name
		</th>
		<th>
			 Gender
		</th>
		<th>
			Phone Number
		</th>
		<th>
			Proficiency Subject
		</th>
		<th>	
			School
		</th>
		<th>	
			Classroom
		</th>
		<th colspan="6">
			Actions
		</th>
	</tr>
	<% @teachers.each do |teacher|%>
		<tr>
			<td>
				<%= teacher.name%>
			</td>
			<td>
				<%= teacher.gender%>
			</td>
			<td>
				<%= teacher.phone_no%>
			</td>
			<td>
				<%= teacher.proficiency_subject%>
			</td>
			<td>
				<%= teacher.school.name%>
			</td>
			<td>
			
				<%= teacher.classrooms.collect(&:name).join(",")%>
			</td>
			<td colspan="2">
				<%= link_to 'Show', teacher_path(teacher) %>
			</td>
			<td colspan="2">
				<%= link_to 'Edit', edit_teacher_path(teacher) %>
			</td>
			<td colspan="2">
				<%= link_to 'Destroy', teacher_path(teacher), method: :delete, data: { confirm: 'Do you want to destroy this record?' } %>
			</td>
		</tr>

	<%end%>

</table>
