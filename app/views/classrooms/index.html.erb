<h3>Listing Classrooms</h3>
<%= link_to 'Add New Classroom', new_classroom_path %></br></br>
<table border="2">
	<tr>
		<th>
			Classroom Name
		</th>
		<th>
			 Number Of Students
		</th>
		<th>
			School
		</th>
		<th colspan="6">
			Actions
		</th>
	</tr>
	<% @classrooms.each do |classroom|%>
		<tr>
			<td>
				<%= classroom.name%>
			</td>
			<td>
				<%= classroom.number_of_students%>
			</td>
			<td>
				<%= classroom.school.name%>
			</td>
			<td colspan="2">
				<%= link_to 'Show', classroom_path(classroom) %>
			</td>
			
			<td colspan="2">
				<%= link_to 'Edit', edit_classroom_path(classroom) %>
			</td>
			<td colspan="2">
				<%= link_to 'Destroy', classroom_path(classroom), method: :delete, data: { confirm: 'Do you want to destroy this record?' } %>
			</td>
		</tr>

	<%end%>

</table>

