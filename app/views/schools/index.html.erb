<h1>Listing Schools</h1>
<%= link_to 'Create New School', new_school_path %></br>
<%= link_to 'Create Classroom', controller: 'classrooms' %></br>
<%= link_to 'Create Teacher', controller: 'teachers' %></br>
<%= link_to 'Create Student', controller: 'students' %></br>
<%= link_to 'Create Subject', controller: 'subjects' %>
<table border="1">
	<tr>
		<th>
			School Name
		</th>
		<th>
			Phone Number
		</th>
		<th>
			 Address
		</th>
		<th>
			 City
		</th>
		<th>
			Zipcode
		</th>
		<th>
			State
		</th>
		<th colspan="6">
			Actions
		</th>
		
	</tr>
	<% @schools.each do |school|%>
		<tr>

			<td>
				<%= school.name%>
			</td>
			<td>
				<%= school.phone_no%>
			</td>
			<td>
				<%= school.address%>
			</td>
			<td>
				<%= school.city%>
			</td>
			<td>
				<%= school.zipcode%>
			</td>
			<td>
				<%= school.state%>
			</td>
			<td colspan="2">
				<%= link_to 'Show', school_path(school) %>
			</td>
			
			<td colspan="2">
				<%= link_to 'Edit', edit_school_path(school) %>
			</td>
			<td colspan="2">
				<%= link_to 'Destroy', school_path(school), method: :delete, data: { confirm: 'Do you want to destroy this record?' } %>
			</td>
		</tr>

	<%end%>

</table>